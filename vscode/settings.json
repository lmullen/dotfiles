    "html.autoClosingTags": false,
    "html.format.endWithNewline": true,
    "html.format.extraLiners": "head, body, main, section, article, header, footer, /html",
    "cSpell.enabledLanguageIds": [
        "html",
        "markdown",
        "plaintext",
        "text"
    ],
    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/**",
        ".vscode",
        "typings",
        "public",
        "static"
    ],
    "html.format.wrapLineLength": 0,
    "markdown.format.wrapLineLength": 0,
    "cSpell.maxNumberOfProblems": 50,
    "javascript.implicitProjectConfig.experimentalDecorators": true,
    "cSpell.allowCompoundWords": true,
    "cSpell.showStatus": false,
    "rewrap.wrappingColumn": 80,
    "rewrap.wholeComment": false,
    "git.autofetch": true,
    "files.exclude": {
        ".Rhistory": true,
        ".Rproj.user": true,
        ".vscode/": true,
        "*.Rproj": true,
        "**/__pycache__": true,
        "env/": true,
        "process-photos": true,
        "staticfiles/": true
    },
    "[python]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
    },
    "python.linting.pylintArgs": [
        // "--errors-only",
        "--load-plugins",
        "pylint_django"
    ],
    "editor.renderControlCharacters": true,
    "go.languageServerExperimentalFeatures": {
        "diagnostics": true, // for build and vet errors as you type
        "findReferences": true // for finding in-package references
    },
    "go.useLanguageServer": false, // formatting only supports LF line endings
    "[go]": {
        "editor.insertSpaces": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "gopls": {
        "usePlaceholders": true // add parameter placeholders when completing a function
    },
    "files.eol": "\n",
    "workbench.sideBar.location": "left",
    "python.formatting.provider": "black",
}
