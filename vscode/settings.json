{
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "editor.fontFamily": "IBM Plex Mono, monospace",
    "editor.tabSize": 2,
    "editor.rulers": [
        80,
        120
    ],
    "editor.snippetSuggestions": "top",
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "bounded",
    "go.formatTool": "gofmt",
    "git.enableCommitSigning": false,
    "git.enableSmartCommit": true,
    "vim.useSystemClipboard": false,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        },
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        },
        {
            "before": [
                "K"
            ],
            "after": [
                "~"
            ]
        }
    ],
    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.wordBasedSuggestions": false,
        "editor.selectionHighlight": false,
        "editor.occurrencesHighlight": false,
        "editor.formatOnSave": false
    },
    "[plaintext]": {
        "editor.wordWrap": "bounded",
        "editor.wordBasedSuggestions": false,
        "editor.selectionHighlight": false,
        "editor.occurrencesHighlight": false,
    },
    "[html]": {
        "editor.wordWrap": "on",
        "editor.wordBasedSuggestions": false
    },
    "explorer.confirmDelete": false,
    "extensions.ignoreRecommendations": true,
    "workbench.startupEditor": "welcomePage",
    "explorer.confirmDragAndDrop": false,
    "editor.tabCompletion": "on",
    "workbench.iconTheme": "vscode-icons",
    // "rewrap.autoWrap.enabled": true,
    "editor.wordWrapColumn": 120,
    "search.useGlobalIgnoreFiles": true,
    "window.zoomLevel": 1,
    "git.confirmSync": false,
    "breadcrumbs.enabled": true,
    "html.format.endWithNewline": true,
    "html.format.extraLiners": "head, body, main, section, article, header, footer, /html",
    "html.format.wrapLineLength": 0,
    "rewrap.wrappingColumn": 80,
    "rewrap.wholeComment": false,
    "git.autofetch": true,
    "files.exclude": {
        ".cache": true,
        ".Rhistory": true,
        ".Rproj.user": true,
        ".vscode/": true,
        "*.Rproj": true,
        "**/__pycache__": true,
        "dist": true,
        "env/": true,
        "node_modules/": true,
        "process-photos": true,
        "staticfiles/": true
    },
    "[python]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
    },
    "python.linting.pylintArgs": [
        "--load-plugins",
        "pylint_django"
    ],
    "editor.renderControlCharacters": true,
    "go.languageServerExperimentalFeatures": {
        "diagnostics": true, // for build and vet errors as you type
        "findReferences": true // for finding in-package references
    },
    "go.useLanguageServer": true, // formatting only supports LF line endings
    "[go]": {
        "editor.insertSpaces": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "files.eol": "\n",
    "workbench.sideBar.location": "left",
    "python.formatting.provider": "black",
    "vsicons.dontShowNewVersionMessage": true,
    "debug.console.fontFamily": "IBM Plex Mono, default",
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "terminal.integrated.shell.osx": "/bin/zsh",
    "workbench.colorTheme": "Default Light+",
    "pandoc-format.command": "pandoc -t markdown --atx-headers --standalone --wrap=none",
}
