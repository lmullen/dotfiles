{
  "breadcrumbs.enabled": true,
  "debug.console.fontFamily": "IBM Plex Mono, default",
  "editor.fontFamily": "IBM Plex Mono, monospace",
  "editor.fontSize": 14,
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80, 120],
  "editor.snippetSuggestions": "top",
  "editor.suggest.showWords": false,
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.wordBasedSuggestions": false,
  "editor.wordWrap": "off",
  "editor.wordWrapColumn": 120,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "onFocusChange",
  "files.eol": "\n",
  "files.exclude": {
    ".cache": true,
    ".Rhistory": true,
    ".Rproj.user": true,
    ".vscode/": true,
    "*.Rproj": true,
    "**/__pycache__": true,
    "**/node_modules/": true,
    "build": true,
    "dist": true,
    "env/": true,
    "process-photos": true,
    "public/": false,
    "staticfiles/": true
  },
  "files.insertFinalNewline": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableCommitSigning": false,
  "git.enableSmartCommit": true,
  "go.autocompleteUnimportedPackages": true,
  "go.languageServerExperimentalFeatures": {
    "diagnostics": true, // for build and vet errors as you type
    // "findReferences": true // for finding in-package references
  },
  "go.useLanguageServer": true, // formatting only supports LF line endings
  "go.formatTool": "gofmt",
  "[go]": {
    "editor.insertSpaces": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "html.format.endWithNewline": true,
  "html.format.extraLiners": "head, body, main, section, article, header, footer, /html",
  "[html]": {
    "editor.wordWrap": "on",
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.formatOnSave": false,
    "editor.occurrencesHighlight": false,
    "editor.selectionHighlight": false,
    "editor.wordBasedSuggestions": false,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 80,
    // "editor.defaultFormatter": "monofon.pandoc-format"
  },
  "pandoc-format.command": "pandoc -t markdown --atx-headers --standalone --wrap=none",
  "[plaintext]": {
    "editor.occurrencesHighlight": false,
    "editor.selectionHighlight": false,
    "editor.wordBasedSuggestions": false,
    "editor.wordWrap": "bounded"
  },
  "[python]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent":"advanced"
  },
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent":"advanced"
  },
  "rewrap.wholeComment": false,
  "rewrap.wrappingColumn": 80,
  "search.useGlobalIgnoreFiles": true,
  // "terminal.integrated.shell.osx": "/bin/zsh",
  // "vim.easymotionMarkerFontFamily": "IBM Plex Mono, monospace",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["K"],
      "after": ["~"]
    },
    {
      "before": ["Ctrl+h"],
      "after": ["Ctrl+w", "h"]
    },
    {
      "before": ["Ctrl+l"],
      "after": ["Ctrl+w", "l"]
    }
  ],
  "vim.useSystemClipboard": false,
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.colorTheme": "Default Light+",
  "workbench.fontAliasing": "auto",
  "workbench.iconTheme": "vscode-icons",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "welcomePage",
  "workbench.tree.indent": 16,
  "python.pythonPath": "/usr/local/bin/python3",
  "python.formatting.provider": "black",
  "go.lintTool": "golint",
  "pgsql.connections": [
    {
      "host": "baird.gmu.edu",
      "dbname": "lmullen",
      "user": "lmullen",
      "password": "",
      "emptyPasswordInput": false,
      "port": "5432",
      "profileName": "Research DB on Baird"
    }
  ],
  "go.toolsManagement.autoUpdate": true,
  "html.format.templating": true,
  "editor.formatOnSave": true,
  "editor.cursorStyle": "line",
  "editor.insertSpaces": false,
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "rewrap.autoWrap.enabled": true,
  "rewrap.autoWrap.notification": "text"
}