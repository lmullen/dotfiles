#!/bin/bash

scriptdir=${PWD##*/} 

proj="Version: 1.0

RestoreWorkspace: Default
SaveWorkspace: Default
AlwaysSaveHistory: Yes

EnableCodeIndexing: Yes
UseSpacesForTab: Yes
NumSpacesForTab: 2
Encoding: UTF-8

RnwWeave: knitr
LaTeX: pdfLaTeX

AutoAppendNewline: Yes
StripTrailingWhitespace: Yes

BuildType: Makefile
  "

if [ ! -e $scriptdir.rproj ]
then
  touch $scriptdir.Rproj
  echo "$proj" > $scriptdir.Rproj
fi

open $scriptdir.Rproj
