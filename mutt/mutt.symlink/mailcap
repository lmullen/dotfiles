image/gif; /Users/lmullen/.mutt/view-attachment.sh %s "-"
application/msword; /Users/lmullen/.mutt/view-attachment.sh %s "-"
application/vnd.openxmlformats-officedocument.wordpressingml.document; /Users/lmullen/.mutt/view-attachment.sh %s "-"
application/rtf; /Users/lmullen/.mutt/view-attachment.sh %s "-"
